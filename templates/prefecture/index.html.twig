{% extends 'base.html.twig' %}

{% block title %}Prefecture index{% endblock %}

{% block body %}
    <h1>Prefecture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Region</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prefecture in prefectures %}
            <tr>
                <td>{{ prefecture.id }}</td>
                <td>{{ prefecture.libelle }}</td>
                <td>{{ prefecture.description }}</td>
                <td>{{ prefecture.region }}</td>
                <td>
                    <a href="{{ path('prefecture_show', {'id': prefecture.id}) }}">show</a>
                    <a href="{{ path('prefecture_edit', {'id': prefecture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prefecture_new') }}">Create new</a>
{% endblock %}
